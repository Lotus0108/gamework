<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center mt-5" style="background-color: #EEEEEE">会員一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-light">
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
              </tr>
          </thead>
          <tbody>
            <% @publics.each do |public| %>
              <tr>
                  <td><%= public.id %></td>
                  <td>
                    <%= link_to admin_customer_path(public), class: "text-dark", style: "text-decoration: underline;" do %>
                     <%= public.name %>
                    <% end %>
                  </td>
                  <td><%= public.email %></td>
                  <td>
                    <%= link_to '削除', admin_customer_path(public), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <div><%= paginate @publics %></div>
    </div>
  </div>

</div>