<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-light mt-5"><%= @public.name %>さんの会員詳細</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-8 mb-2">
      <table class="table">

        <tr>
          <th>会員ID</th>
        <th><%= @public.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @public.name %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @public.email %></th>
        </tr>
      </table>
      <%= link_to '削除', admin_customers_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_public_#{@public.id}"%>
    </div>
  </div>
</div>