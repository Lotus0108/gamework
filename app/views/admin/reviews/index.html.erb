<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center mt-5" style="background-color: #EEEEEE">投稿一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-light">
                  <th>商品名</th>
                  <th>レビュー</th>
              </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                  <td><%= item.id %></td>
                  <td>
                    <%= link_to admin_customer_path(public), class: "text-dark", style: "text-decoration: underline;" do %>
                     <%= public.name %>
                    <% end %>
                  </td>
                  <td><%= public.email %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <div><%= paginate @publics %></div>
    </div>
  </div>

</div>