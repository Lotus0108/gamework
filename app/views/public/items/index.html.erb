<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>レビュー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item_path(item.id) do %>
        </td>
        <td><p>商品名：<%= link_to item.title,item, class: "item_#{item.id}" %></p></td>
        <td><p>レビュー：<%= item.body %></p></td>
        <% end %>
        <td>
          <p>コメント数:<%= item.item_comments.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>