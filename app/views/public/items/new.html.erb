<di class="container">
  <div class="row">
    <div class="offset-md-1">
      <h1>レビュー投稿フォーム</h1>
      <% if @item.errors.any? %>
        <%= @item.errors.count %>件のエラーが発生しました
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model: @item,url: '/items', method: :post, locl:true do |f| %>
        <div class="form-group">
          <h4>商品名</h4>
            <%= f.text_field :title, class: 'form-control item_title' %>
        </div>
        <div class="form-group">
          <h4>レビュー</h4>
            <%= f.text_area :body, class: 'form-control item_title' %>
            <%= f.submit '投稿', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

