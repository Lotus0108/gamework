<div class='container'>
  <div class='row mt-3'>
    <div class="col-md-3 bg-light m-4 text-center">
      <h4>新規会員登録</h4>
    </div>
  </div>

  <div class="row">
    <div class='col-md-12 mx-auto mt-3'>
      <%= form_with model: @public, url: public_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "col-form-label col-sm-1" %><br>
          <%= f.text_field :name, class: "form-control col-sm-3" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "col-form-label col-sm-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-3" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "col-form-label col-sm-1" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-3" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Password(確認用)", class: "col-form-label col-sm-1" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-3" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-sm btn-success col-md-2 mt-3' %>
        </div>

      <% end %>

      <div class="row">
        <div class="col-md-2 bg-light ml-4 mt-2 mb-2">
          <h5>既に登録済みの方</h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 mx-auto my-2">
          <%= link_to "こちら", new_public_session_path %>からログインしてください。
        </div>
      </div>
    </div>
  </div>
</div>
